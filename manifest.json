{
    "name": "Anki Youtube Media Capture",
    "description": "Captures audio and screenshots from youtube videos",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "content_scripts":[
        {
            "matches":["*://*.youtube.com/watch?v=*"],
            "js":["scripts/control_buttons.js"]
        }
    ]
}
