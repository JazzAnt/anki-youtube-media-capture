{
    "name": "Anki Youtube Media Capture",
    "description": "Captures audio and screenshots from youtube videos",
    "version": "0.1",
    "manifest_version": 3,
    "host_permissions": [
        "http://localhost:8765/*"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup/settings.html"
    },
    "background": {
        "service_worker": "scripts/background-script.js"
    },
    "content_scripts":[
        {
            "matches":["*://*.youtube.com/watch?v=*"],
            "js":[
                "scripts/browser-polyfill.js",
                "scripts/control-buttons.js"
            ]
        }
    ]
}
